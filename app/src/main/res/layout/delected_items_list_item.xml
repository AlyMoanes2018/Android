<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/dateHeaderTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="3dp"
        android:text="Today"
        android:textColor="#333333"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainLayout"
        android:layout_below="@id/dateHeaderTV"
        android:background="@android:color/white">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="19dp"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/cry" />

        <LinearLayout
            android:id="@+id/textLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@id/logo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="صيدلية العزبي"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/itemTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:alpha="0.5"
                android:text="٤٧ عباس العقاد, مدينة نصر, القاهرة"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/expiryDateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="على مسافة ٢.٥ كم"
                android:textColor="#CB2E25"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/ignore"
            fontPath="fonts/bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/layout_rounded3"
            android:gravity="center_vertical"
            android:paddingBottom="3dp"
            android:paddingEnd="18dp"
            android:paddingStart="18dp"
            android:paddingTop="5dp"
            android:text="@string/ignore"
            android:textColor="@android:color/white"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>