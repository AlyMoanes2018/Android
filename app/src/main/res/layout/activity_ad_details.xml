<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.android.agzakhanty.sprints.two.views.AdDetails">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.design.widget.AppBarLayout
                android:id="@+id/appBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#459283"
                app:elevation="0dp"
                app:theme="@style/CustomActionBar">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="18dp"
                    android:paddingBottom="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/regTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="@string/ads"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />
                    </RelativeLayout>
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.AppBarLayout>


            <RelativeLayout
                android:id="@+id/whitePart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/adItemTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="15dp"
                    android:text="كريم مرطب للجسم من نيفيا- 150 مل"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/basicDataLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adItemTV"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="14dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pharmacyNameTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(صيدلية العزبى)"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/expiryDateTV"
                        fontPath="fonts/bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="9dp"
                        android:background="@drawable/layout_rounded3"
                        android:paddingStart="18dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="18dp"
                        android:paddingBottom="3dp"
                        android:text="@string/expireWithin"
                        android:textColor="@android:color/white"
                        android:textSize="10sp" />


                </RelativeLayout>

                <ImageView
                    android:id="@+id/adImg"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@id/basicDataLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="9dp"
                     />

                <TextView
                    android:id="@+id/adPrice"
                    fontPath="fonts/bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/adImg"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/layout_rounded4"
                    android:gravity="center"
                    android:paddingStart="7dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="9dp"
                    android:paddingBottom="9dp"
                    android:text="350 جنيه"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/descTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/adPrice"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginBottom="25dp"
                    android:gravity="start"
                    android:text="@string/desc"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/desc2TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/descTV"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="start"
                    android:text="الوصف: قد تعكر البشرة الجافة صفوك في يوم رائع مع أصدقائك، كريم نيفيا بتركيبتة المثالية ستعالج بشرتك ولجمالك."
                    android:textColor="#CC000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/categoriesTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/desc2TV"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginBottom="25dp"
                    android:gravity="start"
                    android:text="@string/cats"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/categoriesValTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/desc2TV"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="28dp"
                    android:layout_toEndOf="@id/categoriesTV"
                    android:gravity="start"
                    android:text="العناية بالبشرة"
                    android:textColor="#CC000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/addToCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/categoriesValTV"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginBottom="28dp"
                    android:background="@drawable/layout_rounded"
                    android:drawableStart="@drawable/ic_add_shopping_cart_white"
                    android:drawablePadding="11dp"
                    android:gravity="center_vertical"
                    android:paddingStart="18dp"
                    android:paddingTop="7dp"
                    android:paddingEnd="18dp"
                    android:paddingBottom="7dp"
                    android:text="@string/cart"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/bluePart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:background="#E9F0F1">

                <TextView
                    android:id="@+id/userRatesTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:layout_marginBottom="29dp"
                    android:text="@string/rates"
                    android:textColor="#140000"
                    android:textSize="14sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ratesRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/userRatesTV">

                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/noUserRatesTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/userRatesTV"
                    android:layout_marginTop="21dp"
                    android:layout_marginBottom="29dp"
                    android:gravity="center_horizontal"
                    android:text="@string/noRatings"
                    android:textColor="#140000"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ratesRecycler"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="29dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/layout_rounded_button"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/writeReview"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>