<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginTop="5dp"
    android:id="@+id/mainLayout"
    android:layout_marginBottom="7dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cry" />

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/logo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTV"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="صيدلية العزبي"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dateTV"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="التاريخ: 20/05/2018"
            android:textColor="#50000000"
            android:textSize="10sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/callTV"
        fontPath="fonts/bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/layout_rounded"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingTop="5dp"
        android:paddingEnd="18dp"
       android:layout_below="@+id/totalTV2"
        android:drawableEnd="@drawable/ic_phone"
        android:drawablePadding="11dp"
        android:paddingStart="18dp"
        android:text="@string/call"
        android:textColor="@android:color/white"
        android:textSize="10sp" />


    <TextView
        android:id="@+id/consultationTypeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/logo"
        android:layout_marginStart="15dp"
        android:text="شكوى من اعراض"
        android:textColor="#CB2E25"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/totalTV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/logo"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="18dp"
        android:text="تم الرد"
        android:layout_alignStart="@+id/consultationNumTV"
        android:textColor="#000000"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/consultationNumTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="31dp"
        android:layout_marginTop="18dp"
        android:layout_alignStart="@id/statusTV"
        android:text="استشاره رقم: ٤٥٦٥"
        android:textColor="#449D44"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/addressTV"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/consultationTypeTV"
        android:text="العنوان:\n ٤٧ عباس العقاد, مدينة نصر, القاهرة"
        android:layout_marginTop="13dp"
        android:layout_marginStart="15dp"
        android:textColor="#50000000"
        android:gravity="start"
        android:layout_marginBottom="13dp"
        android:textSize="12sp" />


</RelativeLayout>

